<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".EditarPerro">


    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AtrÃ¡s"
        android:layout_margin="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAtras"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del perro"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el nombre"
                android:inputType="textPersonName"
                android:backgroundTint="#2196F3"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etRaza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese la raza"
                android:inputType="text"
                android:backgroundTint="#2196F3"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collar"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/RegistrarCollar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escanear"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese la edad"
                android:inputType="number"
                android:backgroundTint="#2196F3"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen del perro"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btnAdjuntarImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adjuntar imagen"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/ivImagen"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:background="#CCCCCC"
                android:contentDescription="Vista previa de la imagen"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_margin="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
