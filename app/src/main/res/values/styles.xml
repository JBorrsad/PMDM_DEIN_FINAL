<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Fondo de la aplicación -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Estado de la barra de sistema -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>

        <!-- Tipografía base -->
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="fontFamily">@font/notosans_regular</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="spinnerStyle">@style/CustomSpinner</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <!-- Estilos de tipografía -->
    <style name="TextAppearance.App.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">36sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/notosans_semibold</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.H5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/notosans_semibold</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Estilo para imágenes circulares -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilo para el NumberPicker -->
    <style name="NumberPickerStyle">
        <item name="android:textAppearance">@style/TextAppearance.App.Body1</item>
        <item name="android:colorControlNormal">@color/grey_400</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_border_background</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!-- Estilo para campos de texto -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!-- Estilo para switches -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/grey_400</item>
    </style>

    <style name="SpinnerImageStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/spinner_image_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Body1</item>
    </style>

    <!-- Estilo personalizado para el switch de tema -->
    <style name="ThemeSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_custom</item>
        <item name="track">@drawable/switch_track_custom</item>
        <item name="android:switchPadding">8dp</item>
    </style>

    <!-- Estilo para texto de login -->
    <style name="TextAppearance.App.Login.Title" parent="TextAppearance.App.H2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Estilo personalizado para los campos de texto del login -->
    <style name="Widget.App.TextInputLayout.Login" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_field_background</item>
        <item name="boxStrokeColor">@color/input_field_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="startIconTint">@color/grey_400</item>
    </style>

    <!-- Estilo para el botón de Google -->
    <style name="Widget.App.Button.Google" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/google_button_background</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">15dp</item>
    </style>
</resources>