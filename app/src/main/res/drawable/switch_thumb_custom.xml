<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado CHECKED (activado) -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Sombra sutil -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#20000000"/>
                    <size android:width="24dp" android:height="24dp"/>
                </shape>
            </item>
            <!-- Círculo principal -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary"/>
                    <stroke android:width="1dp" android:color="#15000000"/>
                    <size android:width="22dp" android:height="22dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Estado NO CHECKED (desactivado) -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Sombra sutil -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#20000000"/>
                    <size android:width="24dp" android:height="24dp"/>
                </shape>
            </item>
            <!-- Círculo principal -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="#FFFFFF"/>
                    <stroke android:width="1dp" android:color="#15000000"/>
                    <size android:width="22dp" android:height="22dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 