<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema para modo oscuro - PawTracker -->
    <!-- Colores primarios ajustados para modo oscuro -->
    <style name="Theme.Perros" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_color_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        
        <!-- Estado de barra de estado y navegación -->
        <item name="android:statusBarColor">@color/primary_dark_color_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark_color_dark</item>
        
        <!-- Colores específicos para modo oscuro -->
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        
        <!-- Forzamos modo oscuro para todas las superficie incluyendo textos y tarjetas -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        
        <!-- Adaptación de interfaz en modo oscuro -->
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Estilos de texto -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2.Dark</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3.Dark</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4.Dark</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5.Dark</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6.Dark</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1.Dark</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2.Dark</item>
        
        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigation.Dark</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Dark</item>
        
        <!-- Estilo tarjetas en modo oscuro -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
        <!-- fondo oscuro para tarjetas -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        
        <!-- Estilos de texto específicos para modo oscuro -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorTertiary">@color/text_tertiary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>
    
    <!-- Estilos de texto para modo oscuro -->
    <style name="TextAppearance.App.Headline1.Dark" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Headline2.Dark" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Headline3.Dark" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Headline4.Dark" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Headline5.Dark" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Headline6.Dark" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Subtitle1.Dark" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Subtitle2.Dark" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <!-- En el modo oscuro podemos usar estilos específicos para componentes -->
    
    <!-- Estilos de componentes para modo oscuro -->
    <style name="Widget.App.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="rippleColor">@color/ripple_color_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="Widget.App.BottomNavigation.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/surface_dark</item>
        <item name="itemIconTint">@color/bottom_nav_item_color_dark</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_dark</item>
        <item name="itemRippleColor">@color/ripple_color_dark</item>
    </style>
    
    <style name="Widget.App.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary_color_dark</item>
        <item name="titleTextColor">@color/on_primary_dark</item>
        <item name="subtitleTextColor">@color/on_primary_dark</item>
        <item name="colorControlNormal">@color/on_primary_dark</item>
    </style>
    
    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">@color/ripple_color_dark</item>
    </style>
    
    <!-- Tema específico para PawTracker en modo nocturno -->
    <style name="Theme.Perros.PawTracker" parent="Theme.Perros">
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
    </style>
</resources>
